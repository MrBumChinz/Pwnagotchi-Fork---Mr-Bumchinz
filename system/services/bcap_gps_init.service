[Unit]
Description=Bettercap GPS Initializer - Start GPS module and tag handshakes
After=pwnaui.service bt_gps_receiver.service
Wants=pwnaui.service bt_gps_receiver.service

[Service]
Type=simple
ExecStartPre=/bin/sleep 15
ExecStart=/usr/bin/python3 -u /usr/local/bin/bcap_gps_init.py
Restart=on-failure
RestartSec=30
User=root
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target
